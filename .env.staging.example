# STAGING ENVIRONMENT CONFIGURATION
# Copy this to .env.staging and update with staging values
# ⚠️ DO NOT USE PRODUCTION DATABASE URLs HERE

# Staging Database (Should be separate from production!)
# TODO: Create a new Neon database for staging
DATABASE_URL="postgresql://[STAGING_USER]:[STAGING_PASSWORD]@[STAGING_HOST]/[STAGING_DB]?sslmode=require&pgbouncer=true"
DIRECT_URL="postgresql://[STAGING_USER]:[STAGING_PASSWORD]@[STAGING_DIRECT_HOST]/[STAGING_DB]?sslmode=require"

# App configuration for staging
NEXT_PUBLIC_APP_URL="https://gogentic-portal-real-git-feature-experimental-iangogentic.vercel.app"
APP_PASSWORD="staging2024"

# NextAuth Configuration for staging
AUTH_SECRET="[GENERATE_NEW_SECRET_FOR_STAGING]"
NEXTAUTH_URL="https://gogentic-portal-real-git-feature-experimental-iangogentic.vercel.app"

# OAuth Providers (can use same as production for testing)
AUTH_GOOGLE_ID="[YOUR_GOOGLE_CLIENT_ID]"
AUTH_GOOGLE_SECRET="[YOUR_GOOGLE_CLIENT_SECRET]"

# Feature Flags for Staging
ENABLE_EXPERIMENTAL_FEATURES="true"
ENABLE_DEBUG_MODE="true"
ENABLE_PROBE_ENDPOINTS="true"

# Monitoring
VERCEL_ENV="preview"
NODE_ENV="staging"